
<div class="row choice <%= ( r.metadata.limitAnswers != 0 && (r.metadata.limitAnswers - r.votes <= 0) ? 'disabled' : '') %>" id="answer_row_<%= r.id %>">

	<div class="col select">
		<div class="custom-checkbox">
			<input type="checkbox" class="option" id="answer_<%= r.id %>" name="choice" value="<%= r.id %>">
			<label class="value" for="answer_<%= r.id %>">
				<div><%= r.value %></div>
			</label>
		</div>
	</div>
	<% if (r.metadata.limitAnswers != 0) { %>
		<div class="col-auto limit">
			<span class="n"><%= r.metadata.limitAnswers - r.votes %></span> left
		</div>
	<% } %>

</div>
